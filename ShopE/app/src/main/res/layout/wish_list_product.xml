<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WishList">

    <ImageView
        android:id="@+id/imageView_wl_image"
        android:layout_width="211dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blacktshirt" />

    <TextView
        android:id="@+id/textView_wl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="64dp"
        android:text="Black T-Shirt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_wl_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_wl_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Rs 230"
        app:layout_constraintEnd_toEndOf="@+id/textView_wl_name"
        app:layout_constraintStart_toStartOf="@+id/textView_wl_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_wl_name" />

    <Button
        android:id="@+id/button_wl_toProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="11dp"
        android:text="Go to product"
        app:layout_constraintEnd_toEndOf="@+id/textView_wl_price"
        app:layout_constraintStart_toStartOf="@+id/textView_wl_price"
        app:layout_constraintTop_toBottomOf="@+id/textView_wl_price" />
</androidx.constraintlayout.widget.ConstraintLayout>